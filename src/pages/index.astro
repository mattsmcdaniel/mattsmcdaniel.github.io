    </div>
    <footer class="block-c">
      <p>&copy; 2025 Matt McDaniel</p>
    </footer>
  </main>
  <style>
    h1 {
      font-family: "YoungSerifVF", serif;
      font-size: 8rem;
      font-weight: 100;
      letter-spacing: -0.0125em;
      line-height: 1.2;
      margin: 0;
    }

    h2 {
      font-family: "YoungSerifVF", serif;
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: -0.0125em;
      line-height: 1.2;
      margin: 1.5em 0 0.5em;
    }

    .lead {
      font-family: "YoungSerifVF", serif;
      font-size: 2rem;
      line-height: 1.2;
      margin: 0 0 1em;
      max-width: 50ex;
    }

    .social-links {
      display: flex;
      justify-content: flex-start;
      list-style-type: none;
      margin: 2em 0;
      padding-left: 0;
    }

    .social-links li {
      margin-right: 1em;
    }

    .social-links a {
      opacity: 0.75;
    }

    .social-links a:hover {
      opacity: 1;
    }

    .social-links a > * {
      display: block;
      width: auto;
      height: 32px;
    }

    .links-list {
      list-style-type: none;
      padding: 0;
    }

    figure {
      margin: 0;
    }

    figcaption {
      line-height: 1.5;
      margin-top: 1em;
    }

    .figcaption-label {
      display: block;
      font-family: "YoungSerifVF";
      font-variation-settings: "ital" 100;
      margin-bottom: 0.25em;
    }

    .block-a {
      padding: 4em 1em;
    }

    .block-b {
      background-color: #eeffaf;
      padding: 4em 1em;
    }

    .block-c {
      padding: 1em;
    }

    .card-catalog-illustration {
      font-size: 1.5vw;
    }

    @media screen and (min-width: 40em) {
      figure {
        display: flex;
        flex-direction: row-reverse;
        padding-right: 2em;
      }

      figcaption {
        padding-right: 2em;
      }

      .card-catalog-illustration {
        font-size: 0.5em;
      }
    }

    @media screen and (min-width: 60em) {
      html,
      body {
        height: 100%;
      }

      main {
        display: grid;
        grid-template-areas:
          "a b"
          "c b";
        min-height: 100%;
      }

      .block-a {
        grid-area: a;
        padding-left: 2em;
        padding-right: 2em;
      }

      .block-b {
        grid-area: b;
        padding-left: 4em;
        padding-right: 4em;
      }

      .block-c {
        grid-area: c;
        padding-left: 2em;
        padding-right: 2em;
      }

      figure {
        display: block;
      }

      figcaption {
        max-width: 36ex;
        padding-right: 0;
      }
    }
  </style>
</BaseLayout>
