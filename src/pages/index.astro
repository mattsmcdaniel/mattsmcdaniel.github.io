---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import linkedInBug from "../assets/InBug-Black.png";
import Invertocat from "../assets/github-mark.svg";
const posts = await getCollection("writing");
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout title="Matt McDaniel">
  <main>
    <div class="block-a">
      <h1>Hello,</h1>
      <p class="lead">
        I'm Matt. I'm a <strong>designer/developer</strong> currently located in Vermont.
      </p>
      <ul class="social-links">
        <li>
          <a href="https://github.com/mattsmcdaniel">
            <Invertocat
              aria-label="GitHub profile"
              fill="#000"
              viewBox="0 0 98 96"
            />
          </a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/mattsmcdaniel/">
            <Image
              src={linkedInBug}
              alt="LinkedIn profile"
              width="840"
              height="779"
            />
          </a>
        </li>
      </ul>
      <h2>Writing</h2>
      <ul class="links-list">
        {
          sortedPosts.slice(0, 5).map((post) => (
            <li>
              <a href={`/writing/${post.id}`}>{post.data.title}</a>
            </li>
          ))
        }
      </ul>
      {
        sortedPosts.length > 5 && (
          <p>
            <a href="/writing">See all writing</a>
          </p>
        )
      }
    </div>
    <div class="block-b">
      <figure>
